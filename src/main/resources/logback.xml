<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="LOG_DIR" value="C:/SpringRest/logs" />
	<!--stdout appender -->
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{20} -
				%msg%n</pattern>
		</encoder>
	</appender>

	<!--file appender -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_DIR}/springrest.log</file>

		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${LOG_DIR}/springrest_%d{yyyy-MM-dd}.log
			</fileNamePattern>

			<!-- Saving log files for 10 days -->
			<maxHistory>10</maxHistory>

			<!-- Max size of log file is 10 GB -->
			<totalSizeCap>10GB</totalSizeCap>
		</rollingPolicy>

		<encoder>
			<pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{20} -
				%msg%n</pattern>
		</encoder>
	</appender>


	<!-- Spring -->
	<logger name="org.springframework" level="info"
		additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- PageController -->
	<logger name="my.app.controller.PageController" level="info"
		additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- UserController -->
	<logger name="my.app.controller.UserController" level="info"
		additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- User -->
	<logger name="my.app.model.User" level="info" additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- Deserializer -->
	<logger name="my.app.model.serialize.Deserializer" level="info"
		additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- Serializer -->
	<logger name="my.app.model.serialize.Serializer" level="info"
		additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- CustomSQLErrorCodeTranslator -->
	<logger name="my.app.repository.CustomSQLErrorCodeTranslator"
		level="info" additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- UserRepositoryImpl -->
	<logger name="my.app.repository.UserRepositoryImpl" level="info"
		additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- UserListExtractor -->
	<logger name="my.app.repository.utils.UserListExtractor"
		level="info" additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- PageService -->
	<logger name="my.app.service.PageService" level="info"
		additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- UserServiceImpl -->
	<logger name="my.app.service.UserServiceImpl" level="info"
		additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<root level="info">
		<!-- <appender-ref ref="STDOUT" /> -->
		<appender-ref ref="FILE" />
	</root>
</configuration>